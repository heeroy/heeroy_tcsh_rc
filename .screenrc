# cjk width
cjkwidth on
# utf8 settings
defutf8 on
defc1 off
#defencoding big5
defencoding utf8

#bind b encoding big5 utf8 # Ctrl-a b 轉 Big5
#bind u encoding utf8 utf8 # Ctrl-a u 轉 UTF-8

# 256 Color Support
term xterm
termcapinfo xterm "Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm"

# allow bold colors - necessary for some reason
attrcolor b ".I"
attrcolor i "+b"

# erase background with current bg color
defbce on

# heeroy's personal settings
#autodetach		on		# default: on
width -w 96
screen -t freenode
#screen -t 星光 2 env LANG=C LC_ALL=en_US.ISO8859-1 noidle
screen -t Star 
screen -t csup
screen -t tcsh
#hardstatus alwayslastline "\033[0;44;37m %y/%m/%d %c:%s \033[0;47;34m%w \033[0m"
#hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"
#hardstatus alwayslastline "%{= wk} %{bW} %H %{wk} | %-Lw%{kw}◣%{= Y}%n%f* %t%{kw}◢%{wk}%+Lw%< %= %{kw}◣%{= C} [%y/%m/%d %c:%s] %{-}"
hardstatus alwayslastline "%{= wk} %{bW} %H %{wk} | %-Lw%{kw}\%{= Y}%n%f* %t%{kw}/%{wk}%+Lw%< %= %{kw}\%{= C} [%y/%m/%d %c:%s] %{-}"
#activity		"activity in %n (%t) [%w:%s]~"
#bell			"bell     in %n (%t) [%w:%s]~"
#crlf			off		# default: off
#deflogin		off		# default: on
#hardcopy_append	on		# default: off
#startup_message	on		# default: on
#termcap  xterm	'AF=\E[3%dm:AB=\E[4%dm'
#terminfo xterm	'AF=\E[3%p1%dm:AB=\E[4%p1%dm'
#vbell			off		# default: ???
defscrollback		1000		# default: 100
#silencewait		15		# default: 30
#pow_detach_msg	"BYE"
bind P paste .
bind ~ activity	"activity in %n (%t) [%w:%s]~"
bind * activity	"activity in %n (%t) [%w:%s]"
bind V screen -t 'vim' 0 vim
bind X lockscreen
#msgwait 1
#version
#msgwait 2
